<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="forum_comment">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="creation_date" type="TIMESTAMP"/>
        <column name="content" type="VARCHAR(500)"/>

        <column name="collaborator_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="forum_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="forum_comment"
              baseColumnNames="collaborator_id"
              referencedTableName="collaborator"
              referencedColumnNames="id"
              constraintName="fk_forum_comment_collaborator"/>
      <addForeignKeyConstraint
              baseTableName="forum_comment"
              baseColumnNames="forum_id"
              referencedTableName="forum"
              referencedColumnNames="id"
              constraintName="fk_forum_comment_forum"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="forum_comment_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/forum/ForumComment.csv"
            tableName="forum_comment">
      <column name="id" type="NUMERIC"/>
          <column name="creation_date" type="TIMESTAMP"/>
          <column name="content" type="STRING"/>
        <column name="collaborator" type="BIGINT"/>
        <column name="forum" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
