<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="packaging_detail">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="name" type="VARCHAR(500)"/>
        <column name="exist" type="TINYINT"/>
        <column name="description" type="VARCHAR(500)"/>

        <column name="packaging_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="packaging_detail_group_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="packaging_detail"
              baseColumnNames="packaging_id"
              referencedTableName="packaging"
              referencedColumnNames="id"
              constraintName="fk_packaging_detail_packaging"/>
      <addForeignKeyConstraint
              baseTableName="packaging_detail"
              baseColumnNames="packaging_detail_group_id"
              referencedTableName="packaging_detail_group"
              referencedColumnNames="id"
              constraintName="fk_packaging_detail_packaging_detail_group"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="packaging_detail_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/packaging/PackagingDetail.csv"
            tableName="packaging_detail">
      <column name="id" type="NUMERIC"/>
          <column name="name" type="STRING"/>
          <column name="exist" type="BOOLEAN"/>
          <column name="description" type="STRING"/>
        <column name="packaging" type="BIGINT"/>
        <column name="packaging_detail_group" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
