<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="paiment_coupon">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="description" type="VARCHAR(500)"/>
        <column name="total" type="NUMERIC"/>
        <column name="paiement_date" type="TIMESTAMP"/>
        <column name="paiement_date_confirmation" type="TIMESTAMP"/>

        <column name="coupon_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="paiment_coupon_state_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="paiment_coupon"
              baseColumnNames="coupon_id"
              referencedTableName="coupon"
              referencedColumnNames="id"
              constraintName="fk_paiment_coupon_coupon"/>
      <addForeignKeyConstraint
              baseTableName="paiment_coupon"
              baseColumnNames="paiment_coupon_state_id"
              referencedTableName="paiment_coupon_state"
              referencedColumnNames="id"
              constraintName="fk_paiment_coupon_paiment_coupon_state"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="paiment_coupon_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/coupon/PaimentCoupon.csv"
            tableName="paiment_coupon">
      <column name="id" type="NUMERIC"/>
          <column name="description" type="STRING"/>
          <column name="total" type="NUMERIC"/>
          <column name="paiement_date" type="TIMESTAMP"/>
          <column name="paiement_date_confirmation" type="TIMESTAMP"/>
        <column name="coupon" type="BIGINT"/>
        <column name="paiment_coupon_state" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
