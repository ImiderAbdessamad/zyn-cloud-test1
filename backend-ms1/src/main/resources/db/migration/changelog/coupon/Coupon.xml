<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="coupon">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="code" type="VARCHAR(500)"/>
        <column name="libelle" type="VARCHAR(500)"/>
        <column name="discount_collaborator" type="NUMERIC"/>
        <column name="percent_influcencer" type="NUMERIC"/>
        <column name="nombre_inscription_max" type="BIGINT"/>
        <column name="nombre_collaborator_inscrit" type="BIGINT"/>

        <column name="influencer_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="coupon_state_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="coupon"
              baseColumnNames="influencer_id"
              referencedTableName="influencer"
              referencedColumnNames="id"
              constraintName="fk_coupon_influencer"/>
      <addForeignKeyConstraint
              baseTableName="coupon"
              baseColumnNames="coupon_state_id"
              referencedTableName="coupon_state"
              referencedColumnNames="id"
              constraintName="fk_coupon_coupon_state"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="coupon_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/coupon/Coupon.csv"
            tableName="coupon">
      <column name="id" type="NUMERIC"/>
          <column name="code" type="STRING"/>
          <column name="libelle" type="STRING"/>
          <column name="discount_collaborator" type="NUMERIC"/>
          <column name="percent_influcencer" type="NUMERIC"/>
          <column name="nombre_inscription_max" type="NUMERIC"/>
          <column name="nombre_collaborator_inscrit" type="NUMERIC"/>
        <column name="influencer" type="BIGINT"/>
        <column name="coupon_state" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
